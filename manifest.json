{
    "name": "SimplydevTranslator",
    "homepage_url": "https://github.com/bsmahala/",
    "description": "Webpage Sentence Translator web page using shortcut or ContextMenu by Birbal Singh Mahala",
    "version": "1.0",
    "permissions": [
        "*://*/*", "tabs", "webNavigation", "activeTab", "contextMenus", "storage"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_title": "Simplydev Webpage Sentence Translator",
        "default_popup": "popup.html"
    },
    "content_scripts": [{
        "matches": ["*://*/*"],
        "js": ["contentscript.js"],
        "run_at": "document_start",
        "all_frames": true
    }],
    "commands": {
        "toggle-feature-foo": {
            "suggested_key": {
                "default": "Alt+M",
                "mac": "Alt+M"
            },
            "description": "Toggle feature foo"
        },
        "_execute_browser_action": {
            "suggested_key": {
                "windows": "Alt+M",
                "mac": "Alt+M",
                "chromeos": "Alt+M",
                "linux": "Alt+M"
            }
        },
        "_execute_page_action": {
            "suggested_key": {
                "default": "Alt+M",
                "windows": "Alt+M",
                "mac": "Alt+M"
            }
        }
    },
    "manifest_version": 2
}